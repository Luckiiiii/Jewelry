@{
    Layout = "_LayoutAdmin";
}
@model AddUserViewModel

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i> Product Edit</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <form class="product-tab-list tab-pane fade active in" id="description" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <span asp-validation-for="FirstName" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                                            </div>                                         
                                            <span asp-validation-for="Email" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <input asp-for="Email"  type="text" class="form-control" placeholder="Email Address">
                                                
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-new-file" aria-hidden="true"></i></span>
                                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number">
                                                
                                            </div>
                                            <span asp-validation-for="Address" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-favorites" aria-hidden="true"></i></span>
                                                <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <span asp-validation-for="LastName" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                                                
                                            </div>
                                            <span asp-validation-for="Password" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-favorites-button" aria-hidden="true"></i></span>
                                                <input asp-for="Password" type="text" class="form-control" placeholder="Password">
                                                
                                            </div>
                                            <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-favorites-button" aria-hidden="true"></i></span>
                                                <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Confirm Password">
                                                
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input asp-for="IsEmployee" type="checkbox">
                                                    <span style="font-size: 16px; color: white;">Employee</span>
                                                </label>
                                            </div>
                                            @if (!ViewData.ModelState.IsValid)
                                            {
                                                <div class="alert alert-danger" role="alert">
                                                    @foreach (var key in ViewData.ModelState.Keys)
                                                    {
                                                        foreach (var error in ViewData.ModelState[key].Errors)
                                                        {
                                                            <span>@error.ErrorMessage</span>

                                                            <br />
                                                        }
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">
                                                <button type="submit" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                    Save
                                                </button>
                                                <button type="button" class="btn btn-ctl-bt waves-effect waves-light">
                                                    Discard
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>