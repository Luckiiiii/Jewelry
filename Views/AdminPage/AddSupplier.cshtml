@{
    Layout = "_LayoutAdmin";
}
@model AddSupplierViewModel

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i>Thêm nhà cung cấp</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <form class="product-tab-list tab-pane active in" id="description" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <span asp-validation-for="Name" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon position"><i class="icon nalika-user account" aria-hidden="true"></i></span>
                                                <input asp-for="Name" type="text" class="form-control" placeholder="Tên nhà cung cấp">
                                            </div>
                                            <span asp-validation-for="Email" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon position"><i class="icon nalika-edit account" aria-hidden="true"></i></span>
                                                <input asp-for="Email" type="text" class="form-control" placeholder="Địa chỉ Email">

                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon position"><i class="icon nalika-new-file account" aria-hidden="true"></i></span>
                                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Số điện thoại">

                                            </div>
                                            <span asp-validation-for="Address" class="text-warning"></span>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon position"><i class="icon nalika-favorites account" aria-hidden="true"></i></span>
                                                <input asp-for="Address" type="text" class="form-control" placeholder="Địa chỉ">

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            @if (!ViewData.ModelState.IsValid)
                                            {
                                                <div class="alert alert-danger" role="alert">
                                                    @foreach (var key in ViewData.ModelState.Keys)
                                                    {
                                                        foreach (var error in ViewData.ModelState[key].Errors)
                                                        {
                                                            <span>@error.ErrorMessage</span>
                                                            <br />
                                                        }
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">
                                                <button type="submit" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                    Save
                                                </button>
                                                <button type="button" class="btn btn-ctl-bt waves-effect waves-light" id="discardButton">
                                                    Discard
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("discardButton").addEventListener("click", function () {
        // Lặp qua tất cả các trường input và đặt giá trị của chúng về rỗng
        var inputFields = document.querySelectorAll(".form-control");
        inputFields.forEach(function (input) {
            input.value = ""; // Đặt giá trị về rỗng
        });
    });
</script>

