@{
    Layout = "_LayoutAdmin";
}
@model IEnumerable<ProductCategory>
<style>
    .css-td-flex{
        display: flex;
    }
</style>
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Quản lý danh mục</h2>
                                    <p>Cửa hàng vàng bạc<span class="bread-ntd">Tuấn Thành</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <!--<h4>Danh sách danh mục sản phẩm</h4>-->
                    <!-- Button to Open the Modal -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Thêm danh mục sản phẩm</button>

                    <div class="table-responsive">
                        <!--nanui-->
                        <div class="btn-group">
                            <ul id="export-buttons"></ul>
                        </div>
                        <!--btuun excel pdf-->
                        <table id="CategoryTable" class="table">
                            <thead>
                                <tr>
                                    <th class="hidden">ID</th>
                                    <th>Tên danh mục sản phẩm</th>
                                    <th class="hidden"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr asp-validation-summary="ModelOnly">
                                        <td class="hidden" data-field="id">@p.Id</td>
                                        <td class="editable" contenteditable="false" data-field="name">@p.Name</td>
                                        <td class="css-td-flex">
                                            <button data-toggle="tooltip" title="Edit" class="pd-setting-ed edit-btn">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </button>
                                            <button data-toggle="tooltip" title="Save" class="pd-setting-ed save-btn" style="display:none;">
                                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                            </button>
                                            <button data-toggle="tooltip" title="Trash" class="pd-setting-ed trash-btn">
                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="modal" id="myModal">

                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form id="myForm">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Thêm danh mục sản phẩm</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                        
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon position"><i class="icon nalika-user account" aria-hidden="true"></i></span>
                                                <input type="text" id="name" name="name" class="form-control" placeholder="Tên danh mục sản phẩm">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                        <button type="submit" class="btn btn-success" data-dismiss="modal" id=" save">Lưu</button>
                                </div>
                                </form>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(document).on('click', '.edit-btn', function () {
            var $row = $(this).closest('tr');
            $row.find('.editable').prop('contenteditable', true).addClass('editing');
            $row.find('.edit-btn').hide();
            $row.find('.save-btn').show();
        });

        $(document).on('click', '.save-btn', function () {
            var $row = $(this).closest('tr');
            var categoryId = $row.find('.hidden[data-field="id"]').text();
            var name = $row.find('.editable[data-field="name"]').text();
            var errorMessage = "";

            // Kiểm tra các trường thông tin có hợp lệ không
            if (!name) {
                errorMessage = "Tên là trường bắt buộc.";
            }
            if (errorMessage) {
                alert(errorMessage);
                return; // Dừng quá trình lưu nếu có trường nào đó không hợp lệ
            }
            $.ajax({
                url: '/AdminPage/SaveCategory',
                type: 'POST',
                dataType: 'json',
                data: {
                    categoryId: categoryId,
                    name: name
                },
                success: function (response) {
                    console.log('Data saved successfully!');
                    $row.find('.editable').prop('contenteditable', false).removeClass('editing');
                    $row.find('.edit-btn').show();
                    $row.find('.save-btn').hide();
                },
                error: function (error) {
                    console.error('Lỗi lưu dữ liệu:', error);
                }
            });
        });

        $(document).on('click', '.trash-btn', function () {
            var $row = $(this).closest('tr');
            var categoryId = $row.find('.hidden[data-field="id"]').text();

            $.ajax({
                url: '/AdminPage/DeleteCategory',
                type: 'POST',
                dataType: 'json',
                data: { categoryId: categoryId },
                success: function (response) {
                    if (response.success) {
                        $row.remove();
                    } else {
                        alert('Không thể xóa danh mục.');
                    }
                },
                error: function (error) {
                    console.error('Lỗi xóa danh mục:', error);
                }
            });
        });
        $("#save").click(function () {
            $.ajax({
                url: '/AdminPage/AddCategory',
                type: 'POST',
                data: $("#myForm").serialize(),
                success: function (response) {
                    if (response.success === false) {
                        // Hiển thị thông báo lỗi
                        alert(response.errorMessage);
                    } else {
                        $("#myModal").modal('hide');
                        var newRow = `<tr>
                        <td class="hidden">${response.id}</td>
                        <td class="editable" contenteditable="false">${response.categoryName}</td>
                        <td>
                            <button data-toggle="tooltip" title="Edit" class="pd-setting-ed edit-btn">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </button>
                            <button data-toggle="tooltip" title="Save" class="pd-setting-ed save-btn" style="display:none;">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                            </button>
                            <button data-toggle="tooltip" title="Trash" class="pd-setting-ed trash-btn">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>`;
                        $("#CategoryTable tbody").append(newRow);
                    }
                    
                },
                error: function (error) {
                    console.error('Lỗi lưu dữ liệu:', error);
                }
            });
        });
    });
</script>
