@{
    Layout = "_LayoutAdmin";
}
@model IEnumerable<ProductItem>
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Quản lý sản phẩm</h2>
                                    <p>Chào mừng đến với của hảng vàng bạc <span class="bread-ntd">Tuấn Thành</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Danh sách sản phẩm</h4>
                    <div class="add-supplier">
                        <a title="Thêm sản phẩm" asp-controller="AdminPage" asp-action="AddProduct">Thêm sản phẩm</a>
                    </div>
                    <div class="table-responsive">
                        <!--nanui-->
                        <div class="btn-group">
                            <ul id="export-buttons"></ul>
                        </div>
                        <!--btuun excel pdf-->
                        <table id="ProductItemTable" class="table">
                            <thead>
                                <tr>
                                    <th class="hidden">ID</th>
                                    <th class="hidden">IDP</th>
                                    <th>Hình ảnh sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Chất liệu</th>
                                    <th>Size</th>
                                    <th>Độ tinh khiết</th>
                                    <th>Trọng lượng (gram)</th>
                                    <th>Số lượng</th>
                                    <th>Giá nhập</th>
                                    <th>Giá bán</th>
                                    <th>Thông tin bảo hành</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var productItem in Model)
                                {
                                    <tr asp-validation-summary="ModelOnly">
                                        <td class="hidden" data-field="id">@productItem.Id</td>
                                        <td class="hidden" data-field="idp">@productItem.Product.Id</td>
                                        <td>
                                            @if (productItem.Product.Img.Any())
                                            {
                                                <img src="@productItem.Product.Img.FirstOrDefault()?.UrlImage" alt="Product Image" width="100" height="100" />
                                            }
                                            else
                                            {
                                                <span>No Image Available</span>
                                            }
                                        </td>
                                        <td data-field="productCategory">@productItem.Product.Category.Name</td>
                                        <td class="editable" contenteditable="false" data-field="productName">@productItem.Product.Name</td>
                                        <td data-field="material" data-id="@productItem.Materials.Id">@productItem.Materials.Name</td>
                                        <td data-field="size" data-id="@productItem.Sizes.Id">@productItem.Sizes.Name</td>
                                        <td data-field="purity" data-id="@productItem.Purity.Id">@productItem.Purity.Name</td>
                                        <td data-field="weight" data-id="@productItem.Weight">@productItem.Weight</td>
                                        <td data-field="quantity">@productItem.Quantity</td>
                                        <td>@(productItem.PurchasePrice?.OrderByDescending(pp => pp.EffectiveDate).FirstOrDefault()?.Price.ToString("N0") ?? "0")</td>
                                        <td class="editable" contenteditable="false" data-field="salesPrice">@(productItem.SalesPrice?.OrderByDescending(pp => pp.EffectiveDate).FirstOrDefault()?.Price.ToString("N0") ?? "0")</td>
                                        <td class="editable" contenteditable="false" data-field="warrantyInformation">@productItem.Product.WarrantyInformation</td>
                                        <td>
                                            <button data-toggle="tooltip" title="Edit" class="pd-setting-ed edit-btn">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </button>
                                            <button data-toggle="tooltip" title="Save" class="pd-setting-ed save-btn" style="display:none;">
                                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                            </button>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.edit-btn').click(function () {
            var $row = $(this).closest('tr');
            $row.find('.editable').prop('contenteditable', true).addClass('editing');
            $row.find('.edit-btn').hide();
            $row.find('.save-btn').show();
        });

        $('.save-btn').click(function () {
            var $row = $(this).closest('tr');
            var productItemId = $row.find('.hidden[data-field="id"]').text();
            var productId = $row.find('.hidden[data-field="idp"]').text();
            var salesPrice = $row.find('.editable[data-field="salesPrice"]').text().replace(/,/g, '');
            var warrantyInformation = $row.find('.editable[data-field="warrantyInformation"]').text();
            var productName = $row.find('.editable[data-field="productName"]').text();
            // var sizeId = $row.find('[data-field="size"]').data('id');
            // var materialId = $row.find('[data-field="material"]').data('id');
            var errorMessage = "";

            if (!salesPrice) {
                errorMessage = "Trường giá bán không được trống.";
            } else if (!/^\d+$/.test(salesPrice.trim())) {
                errorMessage = "Giá bán không hợp lệ.";
            } else if (!warrantyInformation.trim()) {
                errorMessage = "Trường thông tin bảo hành không được trống.";
            } else if (!productName.trim()) {
                errorMessage = "Trường tên sản phẩm không được trống.";
            }
            if (errorMessage) {
                alert(errorMessage);
                return;
            }
            $.ajax({
                url: '/AdminPage/SaveProduct',
                type: 'POST',
                dataType: 'json',
                data: {
                    productItemId: productItemId,
                    productId: productId,
                    salesPrice: salesPrice,
                    warrantyInformation: warrantyInformation,
                    productName: productName
                },
                success: function (response) {
                    console.log('Data saved successfully!');
                    $row.find('.editable').prop('contenteditable', false).removeClass('editing');
                    $row.find('.edit-btn').show();
                    $row.find('.save-btn').hide();
                },
                error: function (error) {
                    console.error('Lỗi lưu dữ liệu:', error);
                }
            });
        });
    });
</script>
