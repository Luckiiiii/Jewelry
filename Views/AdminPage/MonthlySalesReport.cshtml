@{
    Layout = "_LayoutAdmin";
}
<style>
    select#yearSelect {
        padding: 10px 0px;
    }

    select#monthSelect {
        padding: 10px 0px;
    }

    button#getReportButton {
        padding: 8px 18px;
    }
</style>
@model SalesReportViewModel
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Báo cáo doanh thu</h2>
                                    <p>Cửa hàng vàng bạc <span class="bread-ntd">Tuấn Thành</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <!--<h4>Danh sách đơn hàng</h4>-->
                    <div class="add-supplier">
                        <select id="yearSelect">
                            <option value="">Chọn năm</option>
                            @for (int i = DateTime.Now.Year; i >= 2000; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>

                        <select id="monthSelect">
                            <option value="">Chọn tháng</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <button id="getReportButton" type="button">Báo cáo</button>
                    </div>

                    <div class="table-responsive">
                        <!--nanui-->
                        <div class="btn-group">
                            <ul id="export-buttons"></ul>
                        </div>
                        <!--btuun excel pdf-->
                        <table id="SalesTable" class="table">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Size</th>
                                    <th>Chất liệu</th>
                                    <th>Độ tinh khiết</th>
                                    <th>Trọng lượng</th>
                                    <th>Số lượng</th>
                                    <th>Ngày bán</th>
                                    <th>Giá bán</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var table = $('#SalesTable').DataTable(); // Khởi tạo DataTable

        $("#getReportButton").click(function () {
            var year = $("#yearSelect").val();
            var month = $("#monthSelect").val();

            $.get("/AdminPage/GetSalesReport", { year: year, month: month }, function (data) {
                table.clear(); // Xóa dữ liệu hiện tại khỏi DataTable

                // Loop through the data and add each item as a new row in the table
                var totalSales = 0;
                $.each(data, function (index, item) {
                    // Convert the date to dd/mm/yyyy format
                    var saleDate = new Date(item.saleDate);
                    var formattedDate = saleDate.toLocaleDateString('vi-VN');

                    // Convert the unit price and total price to Vietnamese currency format
                    var formattedUnitPrice = item.unitPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                    var formattedTotalPrice = item.totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });

                    // Thêm hàng mới vào DataTable
                    table.row.add([
                        item.productName,
                        item.size,
                        item.material,
                        item.purity,
                        item.weight,
                        item.quantity,
                        formattedDate,
                        formattedUnitPrice,
                        formattedTotalPrice
                    ]);

                    totalSales += item.totalPrice;
                });

                // Add a row for the total sales
                var formattedTotalSales = totalSales.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                table.row.add([
                    'Tổng tiền', '', '', '', '', '', '', '', formattedTotalSales
                ]);

                table.draw(); // Vẽ lại DataTable với dữ liệu mới
            });
        });
    });

</script>