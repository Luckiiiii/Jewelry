@model Warranty
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        font-size: 2em;
        text-align: center;
    }

    h2 {
        font-size: 1.5em;
        text-align: center;
    }

    h3 {
        font-size: 1.2em;
        text-align: center;
    }

    p {
        font-size: 1em;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
        padding: 15px;
        text-align: left;
    }
    button {
        border: none;
        border-radius: 3px;       
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        margin-top: 15px;
        margin-bottom: 159px;
    }
</style>
<h2>DOANH NGHIỆP VÀNG BẠC 9999</h2>
<h1>TUẤN THÀNH</h1>
<h3>DC: Đa Phúc - Sài Sơn - Quốc Oai - Hà Nội</h3>
<h3>Điện thoại: 037.616.9182 - 0982.668.676</h3>
<h2>PHIẾU BẢO HÀNH SẢN PHẨM</h2>
<p>Ngày: @Model.ReturnDate?.ToString("dd/MM/yyyy")</p>
<table>
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Người xuất phiếu</th>
            <th>Tên sản phẩm</th>
            <th>Nội dung bảo hành</th>
            <th>Ngày trả</th>
            <th>Chi Phí (VND)</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Order.Id</td>
            <td>@Model.EmployeeName</td>
            <td>@Model.NameProduct</td>
            <td>@Model.WarrantyInformation</td>
            <td>@Model.ReturnDate?.ToString("dd/MM/yyyy")</td>
            <td>@string.Format("{0:N0}", Model.Price)</td>
            <td>@Model.Note</td>
        </tr>
    </tbody>
</table>
<button onclick="window.print()">In phiếu bảo hành</button>
